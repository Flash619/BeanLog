@{
    Layout = "_LayoutBase";
}

@section Links
{
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
}

@section Scripts
{
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
}

<style>
    body {
        background: #f2f2f2 !important;
    }
    .card {
        box-shadow: 0px 0px 15px 1px rgb(204, 201, 201);
        -moz-box-shadow: 0px 0px 15px 1px rgb(204, 201, 201);
        -webkit-box-shadow: 0px 0px 15px 1px rgb(204, 201, 201);
    }
</style>

<div class="d-flex align-items-center min-vh-100">
    <div class="container">
        <div class="row">
            <div class="col-sm-7 col-lg-5 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <h3 class="text-center display-6">
                            BeanLog
                        </h3>
                        <h4 class="text-center">
                            @ViewData["Title"]
                        </h4>
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>